<h3>Add Comment</h3>

<form class="form-stacked" action="{{ path('blog_comment_create', { 'id': post.id }) }}" method="post" {{ form_enctype(comment_form) }}>
    <div class="clearfix">
        {{ form_label(comment_form.name) }}
        <div class="input">
            {{ form_widget(comment_form.name, {attr: {class: 'span5'}}) }}
        </div>
    </div>
    <div class="clearfix">
        {{ form_label(comment_form.email) }}
        <div class="input">
            {{ form_widget(comment_form.email, {attr: {class: 'span5'}}) }}
            <span class="help-block">Only used for Gravatar!</span>
        </div>
    </div>
    <div class="clearfix">
        {{ form_label(comment_form.body, 'Comment') }}
        <div class="input">
            {{ form_widget(comment_form.body, {attr: {class: 'span5', rows: 5}}) }}
        </div>
    </div>
    <div class="span5 clearfix">
        <button type="submit" class="btn primary pull-right">Add Comment</button>
    </div>

    {{ form_rest(comment_form) }}
</form>
