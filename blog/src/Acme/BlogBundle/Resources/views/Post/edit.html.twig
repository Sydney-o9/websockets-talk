{% extends "AcmeBlogBundle::layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="offset5 span6">
            <h2>Post edit</h2>

            <form action="{{ path('blog_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-stacked">
                <div class="clearfix">
                    {{ form_label(edit_form.title) }}
                    {{ form_widget(edit_form.title, {attr: {class: 'xlarge'}}) }}
                </div>
                <div class="clearfix">
                    {{ form_label(edit_form.body) }}
                    {{ form_widget(edit_form.body, {attr: {class: 'xlarge'}}) }}
                </div>
                {{ form_rest(edit_form) }}
                <div class="clearfix">
                    <input type="submit" class="btn primary pull-right" value="Edit" style="margin-right: 40px;" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="offset5 span6">
            <div class="well">
                <a href="{{ path('blog_show', {id: entity.id}) }}" class="btn">Back</a>
                <form action="{{ path('blog_delete', { 'id': entity.id }) }}" method="post" class="pull-right" style="display: inline-block;">
                    {{ form_widget(delete_form) }}
                    <input type="submit" class="btn danger" value="Delete" />
                </form>
            </div>
        </div>
    </div>
{% endblock %}
